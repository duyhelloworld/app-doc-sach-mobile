<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMainBookItemCoverImage"
        android:layout_width="@dimen/book_width"
        android:layout_height="@dimen/book_height"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/book_cover_description"
        app:layout_constraintBottom_toTopOf="@+id/tvMainBookItemNameV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMainBookItemNameV"
        android:layout_width="@dimen/book_width"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:maxLines="2"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMainBookItemCoverImage" />

</androidx.constraintlayout.widget.ConstraintLayout>